<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/stick_button_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_percent="0.15">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_enable_virtual_stick"
                style="@style/main_fragment_btn"
                android:text="@string/btn_enable_virtual_stick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_disable_virtual_stick"
                style="@style/main_fragment_btn"
                android:text="@string/btn_disable_virtual_stick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_enable_virtual_stick" />

            <Button
                android:id="@+id/btn_set_virtual_stick_speed_level"
                style="@style/main_fragment_btn"
                android:text="@string/btn_set_virtual_stick_speed_level"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_disable_virtual_stick" />

            <Button
                android:id="@+id/btn_take_off"
                style="@style/main_fragment_btn"
                android:text="@string/btn_take_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_set_virtual_stick_speed_level" />

            <Button
                android:id="@+id/btn_landing"
                style="@style/main_fragment_btn"
                android:text="@string/btn_landing"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_take_off" />

            <Button
                android:id="@+id/btn_use_rc_stick"
                style="@style/main_fragment_btn"
                android:text="@string/btn_use_rc_stick_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_landing" />


            <Button
                android:id="@+id/btn_enable_virtual_stick_advanced_mode"
                style="@style/main_fragment_btn"
                android:text="@string/enable_virtual_stick_advanced_mode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_use_rc_stick" />

            <Button
                android:id="@+id/btn_disable_virtual_stick_advanced_mode"
                style="@style/main_fragment_btn"
                android:text="@string/disable_virtual_stick_advanced_mode"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_enable_virtual_stick_advanced_mode" />

            <Button
                android:id="@+id/btn_set_virtual_stick_advanced_param"
                style="@style/main_fragment_btn"
                android:text="@string/set_virtual_stick_advanced_param"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_disable_virtual_stick_advanced_mode" />

            <Button
                android:id="@+id/btn_send_virtual_stick_advanced_param"
                style="@style/main_fragment_btn"
                android:text="@string/send_virtual_stick_advanced_param"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_set_virtual_stick_advanced_param" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/virtual_stick_info_tv"
        android:layout_width="@dimen/uxsdk_500_dp"
        android:layout_height="wrap_content"
        android:maxLines="30"
        android:text="virtual info"
        android:textColor="@color/green"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@id/stick_button_list"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/simulator_state_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simulator state info:"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <dji.sampleV5.moduleaircraft.virtualstick.OnScreenJoystick
        android:id="@+id/left_stick_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/joystick_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stick_button_list" />

    <dji.sampleV5.moduleaircraft.virtualstick.OnScreenJoystick
        android:id="@+id/right_stick_view"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/joystick_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <dji.v5.ux.core.widget.hsi.HorizontalSituationIndicatorWidget
        android:id="@+id/widget_horizontal_situation_indicator"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stick_button_list"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Calibration \nUAV Coordinate"
        app:layout_constraintEnd_toStartOf="@+id/tv_selfControl"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_setOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Origin"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/bt_setXAxis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set X Axis"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/bt_setOrigin" />

    <Button
        android:id="@+id/bt_setZPosOffset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Z offset"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/bt_setXAxis"
        app:layout_constraintStart_toStartOf="@+id/bt_setXAxis"
        app:layout_constraintTop_toBottomOf="@+id/bt_setXAxis" />

    <TextView
        android:id="@+id/tv_selfControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Self Drive Control"
        android:layout_marginRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/simulator_state_info_tv" />

    <Button
        android:id="@+id/btn_selfDrive_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start"
        app:layout_constraintBottom_toTopOf="@+id/right_stick_view"
        app:layout_constraintEnd_toEndOf="@+id/tv_selfControl"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/tv_selfControl"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/btn_selfDrive_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        app:layout_constraintEnd_toEndOf="@+id/btn_selfDrive_start"
        app:layout_constraintStart_toStartOf="@+id/btn_selfDrive_start"
        app:layout_constraintTop_toBottomOf="@+id/btn_selfDrive_start" />

    <Button
        android:id="@+id/btn_selfDrive_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="continue"
        app:layout_constraintEnd_toEndOf="@+id/btn_selfDrive_stop"
        app:layout_constraintStart_toStartOf="@+id/btn_selfDrive_stop"
        app:layout_constraintTop_toBottomOf="@+id/btn_selfDrive_stop" />

    <Button
        android:id="@+id/btn_selfDrive_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"
        app:layout_constraintEnd_toEndOf="@+id/btn_selfDrive_continue"
        app:layout_constraintStart_toStartOf="@+id/btn_selfDrive_continue"
        app:layout_constraintTop_toBottomOf="@+id/btn_selfDrive_continue" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/stick_button_list"
        app:layout_constraintTop_toBottomOf="@+id/virtual_stick_info_tv">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <Button
                android:id="@+id/bt_connectTS"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="@string/bt_connectTS" />

            <Button
                android:id="@+id/bt_readTS"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="@string/bt_readTS" />

            <Button
                android:id="@+id/bt_stopTS"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="Stop reading" />

            <Button
                android:id="@+id/bt_disconnectTS"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Disconnect TS" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_leicaValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_leicaValue"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" />
        <TextView
            android:id="@+id/tv_calibratedTSPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_calibratedLeicaPos"
            android:textColor="@color/black"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>